{
  "compilerOptions": {
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "declarationDir": "dist/types",
    "outDir": "./dist/lib",
    "sourceMap": false,
    "experimentalDecorators": true,
    "lib": ["es2015", "es2016", "es2017"],
    "strict": false,
    "module":"commonjs",
    "target": "es5"
  },
  "include": [
    "./src/",
    "./src/.d.ts"
  ],
  "exclude": [
    "src/**/*.test.ts*",
    "src/**/*.spec.ts*",
    "test/**/*"
  ]
}
